{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": false,
    "strict": false,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declarationMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "type": "module",
  "exclude": [
    "node_modules",
    "wwwroot",
    ".idea",
    ".vscode"
  ],
  "compileOnSave": true
}
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js --no-cache",
    "i": "npm i && npm run npm:install",
    "u": "npm update --save && npm run npm:update",
    "build": "npm run npm:build",
    "npm:install": "cross-env NPM_PATH=./src/npm autonpm install",
    "npm:update": "cross-env NPM_PATH=./src/npm autonpm update -save",
    "npm:build": "cross-env NPM_PATH=./src/npm autonpm build",
    "npm:watch": "cross-env NPM_PATH=./src/npm autonpm watch",
    "npm:version": "cross-env NPM_PATH=./src/npm autonpm-version",
    "npm:cleanup": "cross-env NPM_PATH=./src/npm autonpm-cleanup",
    "npm:pack": "cross-env NPM_PATH=./src/npm autonpm pack"
  }

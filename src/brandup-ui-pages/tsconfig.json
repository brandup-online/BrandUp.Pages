{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": false,
    "strict": true,
    "lib": [ "DOM", "ES2020" ],
    "esModuleInterop": true,
    "noEmitOnError": true,
    "baseUrl": "./source",
    "declaration": false,
    "declarationMap": false,
    "removeComments": false,
    "outDir": "./out"
  },
  "include": [ "source" ],
  "exclude": [
    "node_modules",
    "dist",
    ".vs",
    ".vscode"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}
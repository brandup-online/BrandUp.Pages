<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
    <TypeScriptToolsVersion>3.1</TypeScriptToolsVersion>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="package-lock.json" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="_client\pages\dialogs\dialog-delete.ts" />
    <None Remove="_client\pages\dialogs\dialog-form.ts" />
    <None Remove="_client\pages\dialogs\dialog-list.ts" />
    <None Remove="_client\pages\dialogs\dialog.ts" />
    <None Remove="_client\pages\dialogs\page-collection-create.ts" />
    <None Remove="_client\pages\dialogs\page-collection-delete.ts" />
    <None Remove="_client\pages\dialogs\page-collection-list.ts" />
    <None Remove="_client\pages\dialogs\page-collection-update.ts" />
    <None Remove="_client\pages\dialogs\page-create.ts" />
    <None Remove="_client\pages\dialogs\page-delete.ts" />
    <None Remove="_client\pages\dialogs\page-list.ts" />
    <None Remove="_client\pages\dialogs\page-publish.ts" />
    <None Remove="_client\pages\manager.ts" />
    <None Remove="_client\pages\root.ts" />
    <None Remove="_client\pages\typings\models.d.ts" />
    <None Remove="_client\root.ts" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="2.2.3" />
  </ItemGroup>


  <ItemGroup>
    <Folder Include="wwwroot\" />
    <Folder Include="wwwroot\dist\" />
  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\..\src\BrandUp.Pages.MongoDb\BrandUp.Pages.MongoDb.csproj" />
    <ProjectReference Include="..\..\src\BrandUp.Pages\BrandUp.Pages.csproj" />
  </ItemGroup>


  <ItemGroup>
    <TypeScriptCompile Include="_client\pages\dialogs\dialog-delete.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\dialog-form.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\dialog-list.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\dialog.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-collection-update.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-collection-delete.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-collection-create.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-collection-list.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-create.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-delete.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-list.ts" />
    <TypeScriptCompile Include="_client\pages\dialogs\page-publish.ts" />
    <TypeScriptCompile Include="_client\pages\manager.ts" />
    <TypeScriptCompile Include="_client\pages\root.ts" />
    <TypeScriptCompile Include="_client\pages\typings\models.d.ts" />
    <TypeScriptCompile Include="_client\root.ts" />
  </ItemGroup>


  <ItemGroup>
    <Content Update="Contents\Page\Default.cshtml.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>


  <ItemGroup>
    <None Update="_client\pages\dialogs\page-collection-update.js">
      <DependentUpon>page-collection-update.ts</DependentUpon>
    </None>
    <None Update="_client\pages\dialogs\page-collection-update.js.map">
      <DependentUpon>page-collection-update.js</DependentUpon>
    </None>
  </ItemGroup>

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">
    <!-- As part of publishing, ensure the JS resources are freshly built in production mode -->
    <Exec Command="npm install" />
    <Exec Command="node node_modules/webpack/bin/webpack.js --env.prod --mode=production" />

    <!-- Include the newly-built files in the publish output -->
    <ItemGroup>
      <DistFiles Include="wwwroot\dist\**" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>

</Project>
